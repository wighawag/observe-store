{
	"name": "observator",
	"version": "0.1.2",
	"description": "Type-safe observable store that emits events for each top-level field change with JSON Patch arrays.",
	"keywords": [
		"store",
		"reactive",
		"immutable",
		"mutative",
		"typescript",
		"type-safe",
		"observable",
		"immer",
		"lightweight",
		"minimal"
	],
	"author": "Ronan Sandford",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wighawag/observator.git"
	},
	"homepage": "https://github.com/wighawag/observator#readme",
	"bugs": {
		"url": "https://github.com/wighawag/observator/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"dependencies": {
		"patch-recorder": "^0.2.1",
		"radiate": "^0.3.1"
	},
	"devDependencies": {
		"as-soon": "^0.1.5",
		"mutative": "^1.3.0",
		"prettier": "^3.8.0",
		"tsx": "^4.21.0",
		"typescript": "^5.3.3",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "tsc",
		"dev": "as-soon -w src pnpm build",
		"test": "vitest run",
		"test:watch": "vitest"
	}
}
